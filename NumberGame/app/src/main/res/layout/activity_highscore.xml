<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_empty"
    tools:context="e.albertot.numbergame.HighscoreActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/anton"
        android:text="Show 'em What You Got!"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="35sp"
        android:layout_marginLeft="10dp"
        tools:ignore="HardcodedText,UnusedAttribute"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"/>
    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:numColumns="1"
        android:gravity="center">

    </GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal">
        <Button
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Back"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textSize="38sp"
            android:textColor="@color/buttonFontColor"
            android:background="@color/colorBackgroundButton"
            android:onClick="backButton"
            tools:ignore="HardcodedText,UnusedAttribute" />
    </LinearLayout>


</LinearLayout>
