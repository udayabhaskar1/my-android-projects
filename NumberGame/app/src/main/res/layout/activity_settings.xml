<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_empty"
    tools:context="e.albertot.numbergame.SettingsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/anton"
        android:text="Set Your Difficulty"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"
        android:layout_marginLeft="10dp"
        tools:ignore="HardcodedText,UnusedAttribute"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Easy"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/buttonFontColor"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorBackgroundButton"
            android:onClick="easyButton"
            tools:ignore="ButtonStyle,HardcodedText,UnusedAttribute" />
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Normal"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/buttonFontColor"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorBackgroundButton"
            android:onClick="normalButton"
            tools:ignore="ButtonStyle,HardcodedText,UnusedAttribute" />
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Hard"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/buttonFontColor"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorBackgroundButton"
            android:onClick="hardButton"
            tools:ignore="ButtonStyle,HardcodedText,UnusedAttribute" />

    </LinearLayout>

</LinearLayout>
