<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount="8"
    tools:context="com.chrisnatan.calculator.MainActivity">

    <EditText
        android:id="@+id/summation"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:gravity="center_vertical|center_horizontal"
        android:inputType="numberDecimal"
        android:labelFor="@id/summation"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button7"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:onClick="ButtonPressed"
        android:text="@string/seven" />

    <Button
        android:id="@+id/button8"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:onClick="ButtonPressed"
        android:text="@string/eight" />

    <Button
        android:id="@+id/button9"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:onClick="ButtonPressed"
        android:text="@string/nine" />

    <Button
        android:id="@+id/button4"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:onClick="ButtonPressed"
        android:text="@string/four" />

    <Button
        android:id="@+id/button5"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:onClick="ButtonPressed"
        android:text="@string/five" />

    <Button
        android:id="@+id/button6"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:onClick="ButtonPressed"
        android:text="@string/six" />

    <Button
        android:id="@+id/button1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:onClick="ButtonPressed"
        android:text="@string/one" />

    <Button
        android:id="@+id/button2"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:onClick="ButtonPressed"
        android:text="@string/two" />

    <Button
        android:id="@+id/button3"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:onClick="ButtonPressed"
        android:text="@string/three" />

    <Button
        android:id="@+id/button_fraction"
        android:onClick="ButtonPressedFraction"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:text="@string/fraction" />

    <Button
        android:id="@+id/button0"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:onClick="ButtonPressed"
        android:text="@string/zero" />

    <Button
        android:id="@+id/button_clear"
        android:onClick="ButtonPressedClear"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_row="5"
        android:layout_rowWeight="1"
        android:text="@string/clear" />

</GridLayout>

