<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="3.1434567890098765"
        android:gravity="end|center_vertical"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/row_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="1"
            style="@style/my_calc_style" />

        <Button
            style="@style/my_calc_style"
            android:text="2" />

        <Button
            style="@style/my_calc_style"
            android:text="3" />

        <Button
            style="@style/my_calc_style"
            android:text="+" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/row_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            style="@style/my_calc_style"
            android:text="4" />

        <Button
            style="@style/my_calc_style"
            android:text="5" />

        <Button
            style="@style/my_calc_style"
            android:text="6" />

        <Button
            style="@style/my_calc_style"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_three"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/row_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="7"
            style="@style/my_calc_style" />

        <Button
            style="@style/my_calc_style"
            android:text="8" />

        <Button
            style="@style/my_calc_style"
            android:text="9" />

        <Button
            style="@style/my_calc_style"
            android:text="*" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/row_four"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/row_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:text="C"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />

        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="=" />

        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>